{{#extend "main"}}
    {{#content "body"}}
        <style>
            .left{
                position: fixed;
                width: 300px;
                top: 0;
                bottom: 0;
                border-right: #ccc solid 1px;
            }

            .main{
                margin-left: 300px;
            }
        </style>

        <div class="left">
            <ul>
                <li>静态资源</li>
                {{#publicLinks}}
                    <li><a data-url="{{.}}" href="javascript:void(0);">{{.}}</a></li>
                {{/publicLinks}}
                <li>动态页面</li>
                {{#customLinks}}
                    <li><a data-url="{{.}}" href="javascript:void(0);">{{.}}</a></li>
                {{/customLinks}}
            </ul>
        </div>
        <div class="main">
            <iframe id="iframe" src="{{first}}" frameborder="0" width="100%" height="980px"></iframe>
        </div>
        <script>
            window.onload = function(){
                var nodes = document.getElementsByTagName('a');
                var iframe = document.getElementById('iframe');

                for(var i=0; i<nodes.length; i++){
                    nodes[i].addEventListener('click', function(eve){
                        var tar = eve.target;

                        iframe.src = tar.getAttribute('data-url');
                    }, false)
                }
            }
        </script>
    {{/content}}
{{/extend}}
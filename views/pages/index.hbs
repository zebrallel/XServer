{{#extend "main"}}
    {{#content "body"}}
        <style>
            .left{
                position: fixed;
                width: 250px;
                top: 0;
                bottom: 0;
                border-right: #ccc solid 1px;
                padding-left: 20px;
                box-sizing: border-box;
            }

            .main{
                margin-left: 250px;
            }
        </style>

        <div class="left">
            <div>
                <h3>静态资源</h3>
                {{#publicLinks}}
                    <div><a data-url="{{.}}" href="javascript:void(0);">{{.}}</a></div>
                {{/publicLinks}}
                <br>
                <h3>动态页面</h3>
                {{#customLinks}}
                    <div><a data-url="{{.}}" href="javascript:void(0);">{{.}}</a></div>
                {{/customLinks}}
            </div>
        </div>
        <div class="main">
            <iframe id="iframe" src="{{first}}" frameborder="0" width="100%" height="980px"></iframe>
        </div>
        <script>
            window.onload = function(){
                var nodes = document.getElementsByTagName('a');
                var iframe = document.getElementById('iframe');

                for(var i=0; i<nodes.length; i++){
                    nodes[i].addEventListener('click', function(eve){
                        var tar = eve.target;

                        iframe.src = tar.getAttribute('data-url');
                    }, false)
                }
            }
        </script>
    {{/content}}
{{/extend}}